generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  GESTOR
  COLABORADOR
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String
  role      Role       @default(COLABORADOR)
  sectorId  String?
  sector    Sector?    @relation(fields: [sectorId], references: [id])
  auditLogs AuditLog[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("users")
}

model Sector {
  id        String    @id @default(uuid())
  name      String    @unique
  users     User[]
  payments  Payment[]
  createdAt DateTime  @default(now())

  @@map("sectors")
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  targetType String?
  targetId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  @@map("audit_logs")
}

enum PaymentStatus {
  PENDENTE
  PAGO
}

model Payment {
  id        String        @id @default(uuid())
  amount    Float
  dueDate   DateTime
  category  String
  status    PaymentStatus @default(PENDENTE)
  sectorId  String?
  sector    Sector?       @relation(fields: [sectorId], references: [id])
  fileId    String?
  file      File?         @relation(fields: [fileId], references: [id])
  createdAt DateTime      @default(now())

  @@map("payments")
}

model File {
  id        String   @id @default(uuid())
  filename  String
  path      String
  mimetype  String
  size      Int
  createdAt DateTime @default(now())

  assets   Asset[]
  payments Payment[]

  @@map("files")
}

model Asset {
  id           String    @id @default(uuid())
  name         String
  type         String
  serialNumber String?
  purchaseDate DateTime?
  value        Float?
  invoiceId    String?
  invoice      File?     @relation(fields: [invoiceId], references: [id])
  createdAt    DateTime  @default(now())

  @@map("assets")
}
