generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  GESTOR
  COLABORADOR
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  name      String
  role      Role       @default(COLABORADOR)
  sectorId  String?
  sector    Sector?    @relation(fields: [sectorId], references: [id])
  auditLogs AuditLog[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("users")
}

model Sector {
  id        String   @id @default(uuid())
  name      String   @unique
  users     User[]
  createdAt DateTime @default(now())

  @@map("sectors")
}

model AuditLog {
  id         String   @id @default(uuid())
  action     String
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  targetType String?
  targetId   String?
  metadata   Json?
  createdAt  DateTime @default(now())

  @@map("audit_logs")
}
